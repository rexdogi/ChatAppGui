<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar fx:id="menuBar" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.java.controllers.MenuController">
    <menus>
        <Menu mnemonicParsing="false" text="User">
            <items>
            <CheckMenuItem fx:id="colorCheckBox" mnemonicParsing="false" text="Change color" />
            </items>
        </Menu>
      <Menu mnemonicParsing="false" text="Tools">
        <items>
          <MenuItem fx:id="fileChooser" mnemonicParsing="false" text="Choose file" />
        </items>
      </Menu>
        <Menu mnemonicParsing="false" text="Info">
            <items>
                <MenuItem fx:id="aboutBtn" mnemonicParsing="false" text="About" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="helpBtn" mnemonicParsing="false" text="Help" />
            </items>
        </Menu>
    </menus>
</MenuBar>
